{
  "name": "ThemeForest Sales Analyzer",
  "description": "Quickly see basic revenue & per-day sales for a ThemeForest product.",
  "version": "1.0",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Analyse this product's sales",
    "default_icon": "icon.png"
  },
  "manifest_version": 2
}